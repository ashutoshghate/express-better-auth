# ==================================
# Server Deployment Configuration
# ==================================
SERVER_URL="http://localhost" # Change to your production URL e.g., https://api.yourplatform.com
SERVER_HOST="localhost"
SERVER_PORT=3000
NODE_ENV="development"
API_PREFIX="/api/v1"
# APP_BASE_URL="http://localhost:3000" # Optional: If distinct from SERVER_URL, for frontend-facing URLs in backend logic

# ==================================
# Better Auth Configuration
# ==================================
BETTER_AUTH_URL="http://localhost" # Your APP URL
BETTER_AUTH_SECRET="your_better_auth_secret_key_here_change_this_in_production"

# ==================================
# Database Essential Configuration
# ==================================
DATABASE_URL="your_database_connection_string_here_change_this_in_production"
DATABASE_HOST="your_database_host_here_change_this_in_production"
DATABASE_PORT= "your_database_port_here_change_this_in_production"
DATABASE_USER="your_database_user_here_change_this_in_production"
DATABASE_PASSWORD="your_database_password_here_change_this_in_production"
DATABASE_NAME="your_database_name_here_change_this_in_production"

# ==================================DA
# CORS configuration
# ==================================
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_HEADERS=Origin,X-Requested-With,Content-Type,Accept,Authorization
CORS_ORIGIN="http://localhost:3000" # For development. In production, use your actual frontend URL.
CORS_ALLOWED_ORIGINS="*" # For multiple origins in change production
# ==================================
# Auth Session & JWT configuration if required.
# ==================================
SESSION_SECRET="Session_secret_key_here_change_this_in_production"
JWT_SECRET="your_super_secret_jwt_key_here_change_this_in_production"
JWT_EXPIRES_IN_MINUTES=30
JWT_REFRESH_EXPIRES_IN_DAYS=7
JWT_REFRESH_TOKEN_SECRET="your_separate_refresh_token_secret_for_enhanced_security" 
# ==================================
# Security configuration
# ==================================
RATE_LIMIT_WINDOW_MS=60000     # 1 minute
RATE_LIMIT_MAX_REQUESTS=100    # 100 requests per minute per IP
COOKIE_SECRET="your_cookie_secret_here_change_this_in_production"
PASSWORD_SALT_ROUNDS=16 # ADDED: Number of salt rounds for password hashing (e.g., bcrypt)
# ==================================
# Email Service Configuration
# ==================================
EMAIL_SERVICE_PROVIDER="SMTP" # e.g., SMTP, SendGrid, Mailgun
EMAIL_HOST="smtp.mailtrap.io" # Example for development, replace with real SMTP server in production
EMAIL_PORT=2525
EMAIL_USER="your_email_user"
EMAIL_PASSWORD="your_email_password"
EMAIL_FROM="no-reply@yourplatform.com"
# ==================================
# File Storage Configuration (for Multer)
# ==================================
# Example for AWS S3. Uncomment and configure if using cloud storage.
# FILE_STORAGE_PROVIDER="AWS_S3" # or "LOCAL"
# AWS_ACCESS_KEY_ID="YOUR_AWS_ACCESS_KEY_ID"
# AWS_SECRET_ACCESS_KEY="YOUR_AWS_SECRET_ACCESS_KEY"
# AWS_REGION="ap-south-1" # Or your desired region
# AWS_S3_BUCKET_NAME="your-app-bucket"

# ==================================
# Third-Party OAuth Configuration (Optional, but planned)
# ==================================
# Facebook OAuth Configuration
FACEBOOK_APP_ID="YOUR_FACEBOOK_APP_ID"
FACEBOOK_APP_SECRET="YOUR_FACEBOOK_APP_SECRET"
FACEBOOK_CALLBACK_URL="http://localhost:3000/api/v1/auth/facebook/callback"

# Google OAuth Configuration
GOOGLE_CLIENT_ID="YOUR_GOOGLE_CLIENT_ID"
GOOGLE_CLIENT_SECRET="YOUR_GOOGLE_CLIENT_SECRET"
GOOGLE_CALLBACK_URL="http://localhost:3000/api/v1/auth/google/callback"

# ==================================
# Logging and Monitoring (Optional, but recommended for production)
# ==================================
LOG_LEVEL="info" # debug, info, warn, error
LOG_TO_FILE="false" # true to enable file logging
LOG_FILE_PATH="./logs/app"
LOG_FORMAT="combined" # common, combined, dev, short, tiny
SENTRY_DSN="YOUR_SENTRY_DSN" # For error tracking
ENABLE_HTTP_LOGS="false" # true to enable HTTP request logging